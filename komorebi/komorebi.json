{
  "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/v0.1.29/schema.json",
  "app_specific_configuration_path": "$Env:USERPROFILE/applications.yaml",
  "window_hiding_behaviour": "Cloak",
  "cross_monitor_move_behaviour": "Insert",
  "default_workspace_padding": 4,
  "default_container_padding": 4,
  "border": true,
  "border_width": 4,
  "border_offset": -1,
  "border_style": "System",
  "theme": {
    "palette": "Catppuccin",
    "name": "Mocha",
    "unfocused_border": "Overlay0",
    "single_border": "Mauve",
    "stack_border": "Sky",
    "stackbar_focused_text": "Sky",
    "stackbar_unfocused_text": "Overlay0"
  },
  "stackbar": {
    "height": 30,
    "mode": "OnStack",
    "tabs": {
      "width": 200,
      "font_size": 24
    }
  },
  "monitors": [
    {
      "workspaces": [
        {
          "name": "2.1: Main",
          "layout": "Rows"
        },
        {
          "name": "2.2: Sub",
          "layout": "Rows"
        },
        {
          "name": "2.3: Third",
          "layout": "Rows"
        }
      ]
    },
    {
      "workspaces": [
        {
          "name": "1.1: Main",
          "layout": "Columns"
        },
        {
          "name": "1.2: Sub",
          "layout": "Columns"
        },
        {
          "name": "1.3: Third",
          "layout": "Columns"
        }
      ]
    },
    {
      "workspaces": [
        {
          "name": "3.1: Main",
          "layout": "Columns"
        },
        {
          "name": "3.2: Sub",
          "layout": "Columns"
        },
        {
          "name": "3.3: Third",
          "layout": "Columns"
        }
      ]
    }
  ],
  "global_work_area_offset": {
    "bottom": 30,
    "left": 0,
    "right": 0,
    "top": 30
  },
  "animation": {
    "enabled": false,
    "duration": 300,
    "style": "EaseInOutSine"
  }
}
